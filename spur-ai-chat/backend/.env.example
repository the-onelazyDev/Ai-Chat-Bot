# Backend Environment Variables Template
# Copy to .env and fill in actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# For development: sqlite (default)
DATABASE_URL=sqlite:./spur_chat.db

# For production: PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@host:5432/spur_chat

# LLM Configuration - Ollama (Free & Local)
OLLAMA_URL=http://localhost:11434
LLM_MODEL=mistral

# Alternative: Use OpenAI instead of Ollama
# OPENAI_API_KEY=sk-your-key-here
# USE_OPENAI=true

# CORS Configuration (for frontend URL)
CORS_ORIGIN=http://localhost:5173

# Production CORS Example
# CORS_ORIGIN=https://your-frontend.vercel.app

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=100
